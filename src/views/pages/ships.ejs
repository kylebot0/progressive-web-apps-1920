<%- include ../layouts/_toppage.ejs %>
    <section class="container-info">
        <h2>
            <%- title %>
        </h2>
        <% launches.forEach((data) => {%>
            <article>
                <h2>
                    <%- data.ship_name%>
                </h2>
                <% if (data.image) { %>
                    <div>
                        <img loading="lazy" src=<%- data.image%> alt="img">
                    </div>
                    <% } else { %>
                        <div class='no-image'>
                            <p>No image available</p>
                        </div>
                        <% } %>
                            <p>Ship type:
                                <%- data.ship_type%>
                            </p>
                            <p>Ship roles:
                                <%- data.roles%>
                            </p>
                            <p>Home port:
                                <%- data.home_port%>
                            </p>
                            <a href="ships/<%- data.ship_id%>">More info
                                </a>
            </article>
            <% }) %>
    </section>
    <%- include ../layouts/_bottompage.ejs %>