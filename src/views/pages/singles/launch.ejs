<%- include ../../layouts/_toppage.ejs %>
    <section class="container-info">
        <h2>
            <%- title %>
        </h2>
        <article class="single-item">

            <% if (launch.links.mission_patch_small) { %>
                <div>
                    <img src=<%- launch.links.mission_patch_small %>>
                </div>
                <% } else { %>
                    <div class='no-image'>
                        <p>No image available</p>
                    </div>
                    <% } %>
                        <div>
                            <h2>
                                <%- launch.mission_name%>
                            </h2>
                            <p>Flight number:
                                <%- launch.flight_number%>
                            </p>
                            <p>Launch year:
                                <%- launch.launch_year%>
                            </p>
                            <p>Launch date UTC:
                                <%-launch.launch_date_utc%>
                            </p>
                            <p>Ships:
                                <%- launch.ships %>
                            </p>
                            </br>
                            <p>Launch site ID:
                                <%-launch.launch_site.site_id%>
                            </p>
                            <p>Launch site name:
                                <%-launch.launch_site.site_name_long%>
                            </p>
                            </br>
                            <p>Details:
                                <%-launch.details%>
                            </p>
                        </div>
                        <div class="img-slider"></div>
        </article>
    </section>
    <%- include ../../layouts/_bottompage.ejs %>